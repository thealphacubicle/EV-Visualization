name: GitHub Pages Deployment

on:
  push:
    branches:
      - main  # This triggers the workflow on pushes to the main branch

jobs:
  deploy:
    runs-on: ubuntu-22.04  # Specifies the runner environment to use
    permissions:
      contents: write  # Grants permission to write to the repository
    concurrency:
      group: ${{ github.workflow }}-${{ github.ref }}  # Ensures that only a single job will run at a time
    steps:
      - uses: actions/checkout@v3
        with:
          lfs: true  # Ensures LFS files are checked out

      - name: Deploy
        uses: peaceiris/actions-gh-pages@v3
        if: github.ref == 'refs/heads/main'  # Ensures that this job only runs on the main branch
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}  # The token used for authentication with GitHub to push to the gh-pages branch
          publish_dir: ./docs  # The directory that contains the site to publish. Changed from ./public to ./docs
